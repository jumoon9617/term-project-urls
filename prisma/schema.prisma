generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "windows"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Messages {
  message_id      Int       @id @default(autoincrement())
  message_text    String    @default("No message")
  send_user_name  String
  extracted_at    DateTime  @default(now())

  Urls            Urls[]
}

model Urls {
  url_id          Int       @id @default(autoincrement())
  message_id      Int
  url             String
  title           String    @default("No title")
  extracted_at    DateTime  @default(now())

  message         Messages  @relation(fields: [message_id], references: [message_id])
  urlClicked      UrlClicked[]
}

model UrlClicked {
  clicked_id      Int       @id @default(autoincrement())
  url_id          Int
  clicked_times   Int       @default(0)

  url             Urls      @relation(fields: [url_id], references: [url_id])
}
